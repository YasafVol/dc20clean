{
	"buildCommand": "npx convex deploy --cmd 'npm run build'",
	"outputDirectory": "dist",
	"build": {
		"env": {
			"VITE_USE_CONVEX": "true"
		}
	},
	"headers": [
		{
			"source": "/assets/(.*)\\.js",
			"headers": [{ "key": "Content-Type", "value": "application/javascript; charset=utf-8" }]
		}
	],
	"rewrites": [
		{
			"source": "/(.*)",
			"destination": "/index.html"
		}
	]
}
